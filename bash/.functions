}

# Note taking functions
function nls() {
	: "${NOTE_DIR:?'NOTE_DIR ENV Var not set'}"
	ls -c "$NOTE_DIR" | grep "$*"
}

function n() {
	: "${NOTE_DIR:?'NOTE_DIR ENV Var not set'}"
	if [ $# -eq 0 ]
		then
			nls
	else
		$EDITOR "$NOTE_DIR"/"$*".txt
	fi
